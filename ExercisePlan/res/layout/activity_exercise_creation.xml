<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:stretchMode="columnWidth" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/new_exercise_initinal_pose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/initinal_pose" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/new_exercise_technique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/technique" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/new_exercise_movement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/movement" />
    </LinearLayout>

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ListView
        android:id="@+id/categorySelection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape"
        android:orientation="horizontal" />
